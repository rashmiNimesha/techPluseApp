<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserInfoActivity"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/rounded_bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="32dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/backbutton"
                android:backgroundTint="@color/white"
                android:contentDescription="Back"
                android:padding="0.1dp"
                android:scaleType="centerInside"
                android:src="@drawable/leftbutton"

                app:tint="@color/brand" />

            <TextView
                android:id="@+id/titleText"
                style="@style/CustomTextViewWhite"
                android:layout_marginTop="32dp"
                android:text="Dev Info"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/CustomTextViewWhite"
                android:layout_marginTop="40dp"
                android:text="Username : Logged User Name \nEmail : 2020t00XXX"
                android:textSize="20sp">

            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_layout_signup"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/CustomTextViewBlack"
            android:text="User Settings"
            android:textSize="24sp"
            android:textStyle="bold">

        </TextView>

        <Button
            android:id="@+id/editUserButton"
            style="@style/CustomButton"
            android:layout_width="170dp"
            android:layout_height="39dp"
            android:layout_marginTop="180dp"
            android:text="Edit User"

            />

        <Button
            android:id="@+id/logoutButton"
            style="@style/CustomButton"
            android:layout_width="170dp"
            android:layout_height="39dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="Logout"

            />


    </LinearLayout>

</LinearLayout>