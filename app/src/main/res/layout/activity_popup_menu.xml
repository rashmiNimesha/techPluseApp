<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/burgermenu"
    android:padding="24dp"
    android:layout_marginRight="32dp"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:outlineProvider="background"
    android:outlineAmbientShadowColor="@color/brand">

    <TextView
        android:id="@+id/devInfo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Developer Info"
        android:padding="12dp"
        android:textSize="16sp"
        android:clickable="true"
        android:fontFamily="@font/roboto_serif_medium"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/userSettings"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="User Settings"
        android:outlineSpotShadowColor="@color/brand"
        android:padding="12dp"
        android:textSize="16sp"
        android:clickable="true"
        android:fontFamily="@font/roboto_serif_medium"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Logout"
        android:fontFamily="@font/roboto_serif_medium"
        android:clickable="true"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="@color/white" />
</LinearLayout>
